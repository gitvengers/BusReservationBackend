<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oreo.BusReservation.mapper.MemberMapper">
    <select id="allMembers" resultType="com.oreo.BusReservation.domain.Member">
        SELECT *
        FROM Member
    </select>

    <select id="selectedMember" parameterType="com.oreo.BusReservation.domain.Member"
            resultType="com.oreo.BusReservation.domain.Member">
        SELECT *
          FROM Member
         WHERE user_id = #{user_id} AND user_pw = #{user_pw}
    </select>

    <select id="selectMemberId" parameterType="com.oreo.BusReservation.domain.Member">
        SELECT *
        FROM Member
        FROM id = #{id}
    </select>

    <insert id="insertMember" parameterType="com.oreo.BusReservation.domain.Member">
        INSERT
          INTO Member(user_id,user_pw,name,email)
        VALUES (
            #{user_id},
            #{user_pw},
            #{name},
            #{email}
        )
    </insert>

    <update id="updateMember" parameterType="com.oreo.BusReservation.domain.Member">
        UPDATE Member
           SET user_pw = #{user_pw},
               email = #{email},
               name = #{name}
         WHERE user_id = #{user_id}
    </update>

    <delete id="deleteMember" parameterType="com.oreo.BusReservation.domain.Member">
        DELETE
          FROM Member
         WHERE id=#{id}
    </delete>

</mapper>